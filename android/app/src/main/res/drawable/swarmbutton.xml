<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_checked="true">
    <shape>
      <gradient android:endColor="#77ffffff"
                android:startColor="#77ffffff" android:angle="270" />
      <stroke android:width="2dp" android:color="#000000" />
      <corners android:radius="15dp" />
      <padding android:left="10dp" android:top="10dp"
               android:right="10dp" android:bottom="10dp" />
    </shape>
  </item>

  <item android:state_pressed="true">
    <shape>
      <gradient android:endColor="#7755aa55"
                android:startColor="#77338833" android:angle="270" />
      <stroke android:width="2dp" android:color="#000000" />
      <corners android:radius="15dp" />
      <padding android:left="10dp" android:top="10dp"
               android:right="10dp" android:bottom="10dp" />
    </shape>
  </item>
    <item android:state_focused="true">
      <shape>
        <gradient android:endColor="#7766bb66"
                  android:startColor="#7788dd88" android:angle="270" />
        <stroke android:width="2dp" android:color="#000000" />
        <corners android:radius="15dp" />
        <padding android:left="10dp" android:top="10dp"
                 android:right="10dp" android:bottom="10dp" />
      </shape>
    </item>
    <item>
      <shape>
        <gradient android:endColor="#7788dd88"
                  android:startColor="#7766bb66" android:angle="270" />
        <stroke android:width="2dp" android:color="#000000" />
        <corners android:radius="15dp" />
        <padding android:left="10dp" android:top="10dp"
                 android:right="10dp" android:bottom="10dp" />
      </shape>
    </item>

</selector>
